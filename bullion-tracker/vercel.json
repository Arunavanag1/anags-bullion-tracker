{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/refresh-prices",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/spot-prices",
      "schedule": "0 */8 * * *"
    }
  ],
  "headers": [
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    }
  ],
  "functions": {
    "src/app/api/collection/sync-prices/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/prices/seed/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/cron/refresh-prices/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/cron/spot-prices/route.ts": {
      "maxDuration": 10
    }
  }
}
